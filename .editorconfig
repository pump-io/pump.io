# editorconfig.org
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false
indent_size = unset

[*.{json,css}]
indent_size = 2

[*.{pug,jade}]
indent_size = 2
trim_trailing_whitespace = false
insert_final_newline = false
